        <item name="android:statusBarColor" tools:targetApi="l">@color/windowBackgroundPrimaryDark
        </item>
    </style>

    <style name="Theme.MaterialToolbar" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <item name="colorOnPrimary">@color/white</item>
